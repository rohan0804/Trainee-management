          <div class="col-md-4 col-sm-6">
            <div class="column">
              <div class="heading yellow">
                <h2>Trainees List</h2>
              </div>
              <div class="search-bar">
                <form action="">
                  <input type="search" id="searchicon" class="disp-none" />
                  <i class="fa fa-search" onclick="searchBar()"></i>
                </form>
              </div>
              <div class="card-content" id="card">
                <ul class="trainees-name" id="myList">
                  <% if (traineeNames) { %> <% for (var i =0; i <
                  traineeNames.length; i++ ) { %>
                  <li style="font-size: larger;">
                    <a href="javascript:void(0);" title="Lazaro Roan"
                      ><%=traineeNames[i].name%></a
                    >
                  </li>
                  <% } %> <%} else { %>
                  <h2>No Trainee Registered Now!</h2>
                  <% } %>
                </ul>
                <%if(traineeNames.length >6){%>
                <div id="loadMore">
                  <img
                    style="position: absolute; bottom: 15px;"
                    src="/images/more.png"
                    width="15"
                    height="15"
                    title="show more"
                    alt="Double arrow"
                  />
                </div>
                <%}%>
              </div>
            </div>
          </div>
          <div class="col-md-8 col-sm-6">
            <div class="column">
              <div class="heading green">
                <h2>Announcements</h2>
              </div>
              <div class="card-content">
                <% if (announcements) { %> <% for (var i =0; i <
                announcements.length; i++ ) { %>
                <section class="announcement">
                  <h3 class="announcement-heading">
                    <%=announcements[i].announcementTitle%>
                    <span class="announcement-data"
                      ><%=announcements[i].createdAt%></span
                    >
                  </h3>
                  <p style="font-size: 15px;" class="announcement-data">
                    <%=announcements[i].announcementDescription%>
                  </p>
                </section>
                <% } %> <%} else { %>
                <h2>No Announcement Available Now!</h2>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="column">
              <div class="heading purple">
                <h2>Upcoming events</h2>
              </div>
              <div class="card-content">
                <% if (events) { %> <% for (var i =0; i < events.length; i++ ) {
                %>
                <section class="event">
                  <h3 class="event-info"><%=events[i].heading%></h3>
                  <p style="font-size: 15px;" class="event-date">
                    <%=events[i].date%>
                  </p>
                </section>
                <% } %> <%} else { %>
                <h2>Not Events Available Now!</h2>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
