<script>
  $(document).ready(function () {
    // $("#myList li").css("font-size", "larger");
    let size_li = $("#myList li").size();
    let x = 6;
    $("#myList li:lt(" + x + ")").show();
    $("#loadMore").click(function () {
      x = x + 3 <= size_li ? x + 3 : size_li;
      $("#myList li:lt(" + x + ")").show();
    });
  });
  $(window).on("load", function () {
    $(".loader-wrapper").fadeOut("slow");
  });
</script>
