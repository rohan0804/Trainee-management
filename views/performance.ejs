<div class="container">
  <h1>Calculate Performance:</h1>
  <hr />
  <form action="/mentor/calculateperformance" method="POST">
    <div class="form-group">
      <label for="Trainee">Select Trainee:</label>
      <select class="form-control" id="Trainee" name="traineeId">
        <option selected>Select Trainee</option>
        <%trainees.forEach((trainee)=>{%>
        <option value="<%=trainee.id%>"><%=trainee.name%></option>
        <%})%>
      </select>
    </div>
    <input type="hidden" name="mentorId" value="1" />
    <button type="submit" class="btn btn-primary mb-2" id="addtestbtn">
      Calculate Performance
    </button>
  </form>
</div>
