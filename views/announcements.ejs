      <script>
         function openNav() {
             if($(window).width() <= 1200)
             {
             document.getElementById("mysidenav").style.marginLeft="0";
             document.getElementById("main").style.marginLeft="0";
             document.getElementById("collapse").style.display ="none";
              }
              else{
